{
  "name": "api-server",
  "author": "Ivan Nosar",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivan-nosar/bell-integrator.git"
  },
  "description": "Bell Integrator test app",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "shx rm -rf ./dist",
    "dev": "tsc-watch --project tsconfig.json --preserveWatchOutput --onSuccess \"npm run start\"",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "start": "node --harmony --max-old-space-size=8192 ./dist/main.js",
    "unit-test": "npm run build && cross-env NODE_ENV=test mocha --reporter spec test/unit"
  },
  "dependencies": {
    "apollo-server": "2.16.1",
    "class-validator": "0.12.2",
    "graphql": "15.3.0",
    "mysql2": "2.1.0",
    "reflect-metadata": "0.1.13",
    "type-graphql": "1.0.0",
    "typeorm": "0.2.25"
  },
  "devDependencies": {
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "14.6.0",
    "cross-env": "7.0.2",
    "shx": "0.3.2",
    "tsc-watch": "4.2.9",
    "tslint": "6.1.3",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "4.0.2"
  }
}
